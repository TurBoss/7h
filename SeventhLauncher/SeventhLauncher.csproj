<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>True</UseWindowsForms>
    <StartupObject>SeventhLauncher.App</StartupObject>
    <AssemblyName>7th Launcher</AssemblyName>
    <RootNamespace>SeventhLauncher</RootNamespace>
    <GenerateDocumentationFile>False</GenerateDocumentationFile>
    <ApplicationIcon>Launcher\custom_icon.ico</ApplicationIcon>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <GenerateAssemblyInfo>False</GenerateAssemblyInfo>
    <NoWarn>CA1416</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <GenerateAssemblyInfo>False</GenerateAssemblyInfo>
    <NoWarn>CA1416</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Launcher\custom_icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SeventhHeavenUI\SeventhHeavenUI.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Launcher\custom_bg.png" />
    <Resource Include="Launcher\custom_logo.png" />
  </ItemGroup>

</Project>
